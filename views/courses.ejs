<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Courses - myPlanner</title>

    <!-- JQuery -->
    <script src="/js/jquery-3.4.1.min.js"></script>
    <script src="/js/popper.min.js"></script>

    <!-- Bootstrap -->
    <script src="/js/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500" rel="stylesheet">

    <!-- Custom Style and Script -->
    <script type="text/javascript" src="/js/main.js"></script>
    <link rel="stylesheet" type="text/css" href="/css/style.css" />

  </head>
  <body>

    <div class="sidenav">
      <h2>Hello,</h2>
      <h2><%= user.username %></h2>
      <h3 id="headerid" hidden><%= user.username %></h3>
      <p></p>
      <a href="/home">Home</a>
      <a href="#">Courses</a>
      <p></p>
      <a href="/logout">Logout</a>
    </div>

    <div class="content">
      <h1>Courses</h1>

      <div id="wrapper">
        <div id="coursesTable">
        </div>

        <div id="add">
          <div class="addCourse">
            <form id="addCourse" action="/add_course" method="post">
    
              <div class="add-course">
                <input type="text" name="courseID" placeholder="Course Name" required>
                <button type="submit" class="btn btn-success" value="Submit">Add Course</button>
                <input type="text" name="name" placeholder="name" size="10" value="<%= user.username %>" hidden>
              </div>
    
            </form>
          </div>

          <p></p>
    
          <div class="addAssignment">
            <form id="addAssignment" action="/add_assignment" method="post">
              <select name="courses" id="courses">
              </select>
              <input type="text" name="assignmentName" placeholder="Assignment Name" required>
              <input type="date" class="form-control date" id="date" name="date" size="10" required>
              <input type="text" name="name" placeholder="name" size="10" value="<%= user.username %>" hidden>
              <button type="submit" class="btn btn-success" id="add" value="Submit" ">Add Assignment</button>
            </form>
          </div>
        </div>
      </div>
      </div>
  </body>
</html>
